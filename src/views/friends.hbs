<div class="profile">
    <div class="card profilecard">
        <div class="card-body">
            <input type="text" class="searchbar" id="friendsearch" placeholder="Search">
        </div>
    </div>
    <div class="card profilecard calendar-container">
        <div class="card-body">
            <h6 class="card-title">Results</h6>
            <div class="search-results" id="search-results">

            </div>

        </div>
    </div>
</div>
<hidden id="usermsid" name="{{currentuser.msid}}"></hidden>

<!-- Modal -->
<div class="modal fade" id="profilecard" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body" id="profilecardBody">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="addfriend">Add friend</button>
      </div>
    </div>
  </div>
</div>